<div class="col-md-8 mx-auto">

	<h3>My Notes</h3>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Note Text</th>
				<th class="text-center">Amount</th>
				<th class="text-center">Transaction</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @notes.each do |note| %>
				<tr>
					<td><%= note.note_text %></td>
					<td class="text-center"><%= number_to_currency(note.amount) %></td>
					<td class="text-center"><%= note.related_transaction&.name %></td>
					<td class="text-center">
						<div class="dropdown">
							<a class="btn btn-sm" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								...
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
								<%= link_to 'Show', note_path(note), class: 'dropdown-item' %>
								<%= link_to 'Edit', edit_note_path(note), class: 'dropdown-item' %>
								<%= link_to 'Delete', note_path(note), method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to 'New Note', new_note_path, class: 'btn btn-success' %>
</div>

<br />
