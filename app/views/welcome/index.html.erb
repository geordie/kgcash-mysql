<h1>Welcome</h1>

<div class="row lead">
	<div class="col-md-3">
		<%= render 'expenses/year_navigator' %>
	</div>
</div>

<div class="container">
	<div class="card-deck mb-3 text-center">
	<div class="card mb-4 box-shadow">
		<div class="card-header">
			<h4 class="my-0 font-weight-normal">Revenue</h4>
		</div>
		<div class="card-body">
			<h1 class="card-title"><span class="credit"><%= number_to_currency(@revenue) %></span> </h1>
			<ul class="list-unstyled mt-3 mb-4">
				<li><strong>Uncategorized:</strong> <span class="credit">$<%= @revenues_uncategorized[0][:uncategorized_revenue] %></span></li>
				<li><%= link_to @revenues_uncategorized[0][:count],
					uncategorized_incomes_path(:year => @year) %> transactions</li>
			</ul>
		</div>
	</div>
	<div class="card mb-4 box-shadow">
		<div class="card-header">
			<h4 class="my-0 font-weight-normal">Expenses</h4>
		</div>
		<div class="card-body">
			<h1 class="card-title"><span class="debit"><%= number_to_currency(@expenses.to_s) %></span></h1>
			<ul class="list-unstyled mt-3 mb-4">
				<li><strong>Uncategorized:</strong> <span class="debit">$<%= @expenses_uncategorized[0][:uncategorized_expenses] %></span></li>
				<li><%= link_to @expenses_uncategorized[0][:count],
					uncategorized_expenses_path(:year => @year) %> transactions</li>
			</ul>
		</div>
	</div>
</div>