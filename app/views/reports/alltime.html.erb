<h2>All Time Spend</h2>

<table class="table table-striped table-condensed">
	<tr>
		<th width="100px">Year</th>
		<th>Expenses</th>
		<th>Expenses (uncategorized)</th>
		<th>Revenue</th>
		<th>Revenue (uncategorized)</th>
		<th>Net Revenue</th>
	</tr>

<% @results.each_with_index do |item, idx| %>
	<tr>
		<td><%= item[1]["year"]%></td>
		<td><%= number_to_currency(item[1]["expenses"], precision: 0)%></td>
		<td><%= number_to_currency(item[1]["uncategorized_expenses"], precision: 0)%></td>
		<td><%= number_to_currency(item[1]["revenue"], precision: 0)%></td>
		<td><%= number_to_currency(item[1]["uncategorized_revenue"], precision: 0)%></td>
		<td><%= number_to_currency(item[1]["net_revenue"], precision: 0)%></td>
	</tr>
<% end %>
</table>