<h3>Income Statement</h3>

<div class="row lead">
	<div class="col-md-3">
		<%= render 'expenses/year_navigator' %>
	</div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
	<li class="nav-item">
		<a class="nav-link active" id="home-tab" data-toggle="tab" href="#incomeTab" role="tab" aria-controls="home" aria-selected="true">Income</a>
	</li>
	<li class="nav-item">
		<a class="nav-link" id="profile-tab" data-toggle="tab" href="#expensesTab" role="tab" aria-controls="profile" aria-selected="false">Expenses</a>
	</li>
</ul>

<div class="tab-content" id="myTabContent">
	<div class="tab-pane fade show active" id="incomeTab" role="tabpanel" aria-labelledby="home-tab">
		<div id="tableIncome"></div>

		<%= render partial: "categoryTable", locals: {
			gonData: "gon.income2",
			domId: "tableIncome",
			year: @year,
			valueField: "income",
			linkURLPath: "../incomes",
			}
		%>
	</div>

	<div class="tab-pane fade" id="expensesTab" role="tabpanel" aria-labelledby="profile-tab">
		<div id="tableExpense"></div>

		<%= render partial: "categoryTable", locals: {
			gonData: "gon.expense2",
			domId: "tableExpense",
			year: @year,
			valueField: "expenses",
			linkURLPath: "../expenses",
			}
		%>
	</div>

</div>
