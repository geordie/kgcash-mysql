
<h3>Transactions</h3>

<div class="row-fluid">
  <div class="span2">
    <%= label_tag(:budget, "Budget") %>
  </div>
  <div class="span3">
    <%= select_tag :budget, options_from_collection_for_select(@budgets, "id", "name") %>
  </div>
  <div class="span2">
    <%= label_tag(:category, "Category") %>
  </div>
  <div class="span2">
    <%= form_tag({},{:method => :get}) do %>
      <%= select_tag( :category, options_from_collection_for_select(@budgets[0].sortedCategories(true),'id','name', @category),:class => 'transaction_filter' ) %>
    <% end %>
  </div>
  <div class="span2 pull-right">
    <%= link_to 'New Transaction', new_transaction_path %>
  </div>
</div>

<div class="row-fluid">
  <div class="span10"></div>
</div>

<table class="table table-striped table-condensed">
  <tr>
    <th width="100px">Date</th>
    <th>Details</th>
    <th>Notes</th>
    <th width="75px">Amount</th>
    <th>Category</th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
<% @txAmount = transaction.credit - transaction.debit %>
<% @txAmountClass = @txAmount > 0 ? "credit" : "debit" %>
  <tr>
    <td><%= transaction.tx_date.strftime("%d-%b-%Y") unless transaction.tx_date.nil? %></td>
    <td><%= best_in_place transaction, :details, :type => :textarea %></td>
    <td><%= best_in_place transaction, :notes%></td>
    <td class="<%= @txAmountClass %>"><%= number_to_currency(@txAmount) %></td>
    <td><%= form_for transaction, :remote => true do |f| %> 
            <%= f.select :category_id, options_from_collection_for_select(@budgets[0].sortedCategories,'id','name', transaction.category_id), {}, :class => 'transaction_update' %>
        <% end %>
    </td>
    <td><%= link_to 'Show', transaction_path(transaction) %></td>
    <td><%= link_to 'Delete', transaction_path(transaction), confirm: 'Are you sure?', method: :delete, remote: true, class: 'delete_post' %></td> 
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Transaction', new_transaction_path %>