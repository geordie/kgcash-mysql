<h1>Listing transactions</h1>

<%= link_to 'New Transaction', new_transaction_path %>

<table>
  <tr>
    <th>Date</th>
    <th>Details</th>
    <th>Notes</th>
    <th>Debit</th>
    <th>Credit</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.tx_date.strftime("%Y-%b-%d") %></td>
    <td><%= best_in_place transaction, :details, :type => :textarea %></td>
    <td><%= best_in_place transaction, :notes%></td>
    <td><%= transaction.debit %></td>
    <td><%= transaction.credit %></td>
    <td><%= form_for transaction, :remote => true do |f| %> 
            <%= f.select :category_id, current_user.category_selector, {}, :class => 'transaction_update' %>
        <% end %>
    </td>
    <td><%= link_to 'Show', transaction_path(transaction) %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction_path(transaction), confirm: 'Are you sure?', method: :delete, remote: true, class: 'delete_post' %></td> 
  </tr>
<% end %>
</table>

