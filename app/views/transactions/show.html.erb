<p id="notice"><%= notice %></p>

<p>
  <b>Transaction Date:</b>
  <%= @transaction.tx_date %>
</p>

<p>
  <b>Posting Date:</b>
  <%= @transaction.posting_date %>
</p>

<p>
  <b>Type:</b>
  <%= @transaction.tx_type %>
</p>

<p>
  <b>Details:</b>
  <%= @transaction.details %>
</p>

<p>
  <b>Debit:</b>
  <%= @transaction.debit %>
</p>

<p>
  <b>Credit:</b>
  <%= @transaction.credit %>
</p>

<p>
  <b>Category:</b>
  <%= @transaction.category_id %>
</p>

<p>
  <b>Notes:</b>
  <%= @transaction.notes %>
</p>

