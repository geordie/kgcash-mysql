<% if !@month.nil? && @month > 0 %>

	<% monthPrev, yearPrev = DateMath.last_month( @month, @year ) %>
	<% monthNext, yearNext = DateMath.next_month( @month, @year ) %>

	<%= link_to '<', request.query_parameters.merge({:month => monthPrev, :year => yearPrev}) %>

	<%= Date::MONTHNAMES[@month].to_s + ", " + @year.to_s %>

	<%= link_to '>', request.query_parameters.merge({:month => monthNext, :year => yearNext}) %>
<% end %>