<h3><%= @title %></h3>

<div class="row lead">
	<div class="col-md-3">
		<%= render 'year_navigator' %>
	</div>
	<div class="col-md-3">
		<%= render 'month_navigator' %>
	</div>
	<div class="col-md-3">
		<%= button_to 'Autocategorize', autocategorize_transactions_path(transactions: @transactions.pluck(:id).to_s, month: @month, year: @year), method: :post, class: 'btn btn-primary' %>
	</div>
</div>

<div class="container">
  <div class="row">
      <div class="col-md-10">
          <%== pagy_bootstrap_nav(@pagy) %>
      </div>
  </div>
</div>

<%= render partial: "transactions/typed_transaction_list", locals: {txType: @display_type } %>
