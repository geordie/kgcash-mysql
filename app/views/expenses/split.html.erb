<h3>Split Transaction</h3>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12">
			<div class="card">
				<div class="card-body">
					<%= render 'header' %>
				</div>
			</div>
		</div>
	</div>

	<%= form_with url: split_commit_expenses_path do |f| %>
	<div class="row">
		<div class="col-sm-12">
			<%= f.hidden_field :tx_id, value: @id %>
			<table class="table table-striped table-condensed">
				<tr>
					<th>Details</th>
					<th>Notes</th>
					<th width="75px">Amount</th>
					<th>Category</th>
				</tr>
				<%= render partial: "split_row", locals: {transactions: @transaction_list, f: f} %>
				<tr>
					<td></td>
					<td>Totals:</td>
					<td><span id="totalSplitAmount"></span></td>
					<td></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row justify-content-end">
		<div class="col-md-1">
			<%= f.submit %>
		</div>
	</div>
	<% end %>
</div>

