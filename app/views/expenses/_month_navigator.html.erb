<% if !@month.nil? && @month > 0 %>
	<%= link_to '<', (local_assigns[:pathPrev]) ?
		pathPrev :
		expenses_path(:month => @monthPrev, :year => @yearPrev )
	%>
	<%= Date::MONTHNAMES[@month].to_s + ", " + @year.to_s %>
	<%= link_to '>', (local_assigns[:pathNext]) ?
		pathNext :
		expenses_path(:month => @monthNext, :year => @yearNext )
	%>
<% end %>