<h3>Expenses</h3>

<div class="row lead">
	<div class="col-md-3">
		<%= render 'year_navigator' %>
	</div>
</div>

<div class="row lead">
	<div class="col-md-3">
		<%= render 'month_navigator' %>
	</div>
</div>


<div class="row">
	<div class="col-md-10">
		<%= will_paginate @transactions %>
	</div>
	<div class="col-md-2">
		<%= link_to "View Uncategorized", uncategorized_expenses_path %>
	</div>
</div>


<%= render partial: "transactions/typed_transaction_list", locals: {txType: 'expense'} %>

<div class="row float-right">
	<div class="col-md-12">
		<%= link_to "View Uncategorized", uncategorized_expenses_path, class: "btn mb-1" %>
		<button id="exportCsv" type="submit" class="btn mb-1" onclick="exportCsv()">Download as CSV</button>
	</div>
</div>

<h3>Amount per Account</h3>

<div class="row">
	<div class="col-md-3">
		<table class="table table-striped table-condensed">
			<tr>
				<th width="120px">Account</th>
				<th class="text-center" width="75px">Amount</th>
			</tr>
			<% @accountTotals.each_with_index do |acctTot, idx| %>
			<tr>
				<td><%= acctTot[1][0] %></td>
				<td><%= number_to_currency(acctTot[1][1]) %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
